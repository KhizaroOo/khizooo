<style>

    .gcg-style {
        width: 520px;
        background: #fff;
        padding: 15px;
        position: relative;
        border: 2px solid #010101;
    }

    .gcg-style i {
        position: absolute;
        top: 10px;
        right: 10px;
        cursor: pointer;
    }

        .gcg-style i:active {
            transform: rotate(45deg);
        }

        .gcg-style .gradientColorBox {
            height: 315px;
            width: 100%;
            border: 2px solid #010101;
