@using khizooo.AppData.SharedHelper;
@using khizooo.AppData;

<PageTitle>Khizooo - Writing</PageTitle>
<HeadContent>
    <meta name="keywords" content="writings, articles, essays, creative writing, khizooo">
    <meta name="description" content="Read KhizoOo's writings where creativity meets insight, covering various topics with a unique perspective.">

    <meta property="og:title" content="Khizooo - Drawing Artist | Tech Lover | Content Creator">
    <meta property="og:description" content="Read KhizoOo's writings where creativity meets insight, covering various topics with a unique perspective.">
    <meta property="og:image" content="images/SEO/OG-Image.png">
    <meta property="og:url" content="https://www.khizooo.com/creative-works/writing">
