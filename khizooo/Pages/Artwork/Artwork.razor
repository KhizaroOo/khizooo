<style>
    .grid-container {
        columns: 5 200px;
        column-gap: 1.5rem;
        width: 90%;
        margin: 0 auto;
    }
        .grid-container .Art-Piece {
            width: 150px;
            margin: 0 1.5rem 1.5rem 0;
            display: inline-block;
            width: 100%;
            border: solid 4px black;
            padding: 5px;
            box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5);
            border-radius: 5px;
            transition: all 0.25s ease-in-out;
        }
        .grid-container .Art-Piece:hover img {
                filter: grayscale(0);
            }
        .grid-container .Art-Piece:hover {
                border-color: #ffd100;
                box-shadow: 0px 0px 15px #ffd100;
            }
        .grid-container .Art-Piece img {
                width: 100%;
                filter: grayscale(100%);
                border-radius: 5px;
                transition: all 0.25s ease-in-out;
            }
    .modal-img {
        width: 100%;
        border-radius: 0;
    }
</style>

<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div id="Right-Page-Content" class="container-fluid">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 align-self-center text-center">
                <div class="iq-card sb-top-banner-card iq-card-block iq-card-stretch iq-card-height p-2" style="background:#96d8ed">
                    <div class="iq-card-body pb-5 pt-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-7 align-self-center text-left">
                                <h1 class="mb-2">ARTWORKS</h1>
                                <p class="mb-2">Expressive  -  Unique  -  Visionary</p>
                            </div>
                            <div class="col-4 align-self-center text-right"><SocialMedia /></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <p class="h6 text-center mt-5 mb-5">Abstract drawings blending lines, colors, and ideas, creating a powerful visual story in the smallest possible space</p>
            </div>
            <div class="grid-container">
            @{
                foreach (Art art in MyAllArts)
                {
                        <div class="Art-Piece" onclick="openArtModal(this)">
                            <img class="grid-item grid-item-1"
                                 src="@((MarkupString)art.IMG)"
                                 alt="@((MarkupString)art.Title)">
                            <h6 class="mt-3 mb-3 text-center">@((MarkupString)art.Title)</h6>
                        </div>
                }
            }
            </div>
        </div>

    </div>
</div>

<!-- Art Modal -->
<div class="modal fade" id="ArtModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header align-self-center">
                <h5 class="modal-title" id="ArtTitle">- - -</h5>
            </div>
            <div class="modal-body" style="padding:2rem">
                <img id="ArtImg" src="https://placehold.co/500x750/000000/FFFFFF/png" class="modal-img">
            </div>
            <div class="modal-footer align-self-center">
                <button id="ArtDowbloadButton" type="button" class="btn btn-warning btn-lg" onclick="downloadArt()">Download</button>
                <div class="btn-group" role="group">
                    <button id="ArtBuyButton" type="button" class="btn btn-warning btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Buy NFT
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                        <a class="dropdown-item disabled" href="#">Agora {ELYSIUM}</a>
                        <a class="dropdown-item disabled" href="#">OpenSea {POLYGON}</a>
                        <a class="dropdown-item disabled" href="#">Rarible {POLYGON}</a>
                        <a class="dropdown-item disabled" href="#">Mintable {ETHEREUM}</a>
                    </div>
                </div>
                <div class="btn-group" role="group">
                    <button id="ArtSocialButton" type="button" class="btn btn-warning btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Social Media
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                        <a class="dropdown-item disabled" href="#">Instagram</a>
                        <a class="dropdown-item disabled" href="#">Facebook</a>
                        <a class="dropdown-item disabled" href="#">X</a>
                        <a class="dropdown-item disabled" href="#">TikTok</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {

    SharedHelper SH = new SharedHelper();
    KhizoOo Me = new KhizoOo();
    List<Art> MyAllArts = new MyArts().GetMyArts(1000);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("LoadScripts", "js/jquery.magnific-popup.min.js");
            await JSRuntime.InvokeVoidAsync("LoadScripts", "artworks/js/artworks.js");
        }
        catch (Exception ex) { Console.WriteLine($"Error loading or calling script: {ex.Message}"); }
    }


    #region Custom Methods

    public static readonly string[] NumberWords = new string[] { "one", "two", "three", "four", "five", "six", "seven", "eight", "nine", "ten" };
    public Random random = new Random();

    public string GetRandomNumberWord()
    {
        int index = random.Next(0, NumberWords.Length);
        return NumberWords[index];
    }

    #endregion

}

