<style>
    .image-container {
        position: relative;
        background-color: transparent;
        border-radius: 0;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .image-container img {
            max-width: 100%;
            object-fit: contain;
        }

    .image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background: rgba(0, 0, 0, 0.7);
        text-align: center;
        padding: 10px 0;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .image-container:hover .image-overlay {
        opacity: 1;
    }

    .image-overlay p {
        color: white;
        font-size: 0.8rem;
        font-weight: 600;
        margin: 0;
    }

    .modal-img {
        width: 100%;
        border-radius: 0;
    }
</style>

