<!-- Art Modal -->
<div class="modal fade" id="ArtModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header align-self-center">
                <h5 class="modal-title" id="ArtTitle"></h5>
            </div>
            <div class="modal-body" style="padding:2rem">
                <img id="ArtImg" src="" class="modal-img">
            </div>
            <div class="modal-footer align-self-center">
                <button type="button" class="btn btn-dark">View Detail</button>
            </div>
        </div>
    </div>
</div>


<script>
    function openArtModal(e) {

        let ArtTitle = $(e).find(".image-overlay p").text();
        let ArtImage = $(e).find("img").attr("src");


        $("#ArtTitle").text(ArtTitle);
        $("#ArtImg").attr("src", ArtImage);


        history.pushState(null, "", "?title=" + ArtTitle + "");

        $("#ArtModal").modal("show");
    }

